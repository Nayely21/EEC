<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_degradado"
    android:layout_height="match_parent"
    tools:context=".Mujerabdominales">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="#D64F4F"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="ABDOMINALES"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/abdominalmu"
                android:layout_width="310dp"
                android:layout_height="205dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#8452AE"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/abdominalesmu" />

            <TextView
                android:id="@+id/concepto"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/letra1"
                android:rotationX="0"
                android:text="CONCEPTO:"
                android:textAllCaps="false"
                android:textColor="#9A0505"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desripcion"
                android:layout_width="339dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:fontFamily="@font/letra1"
                android:gravity="center"
                android:rotationX="0"
                android:text="Las abdominales son una gran forma de obtener un vientre plano de manera efectiva, y hay “miles” de variaciones."
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accion"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/letra1"
                android:rotationX="0"
                android:text="Que ejercicios realizar:"
                android:textAllCaps="false"
                android:textColor="#9A0505"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desripcion2"
                android:layout_width="347dp"
                android:layout_height="229dp"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:rotationX="0"
                android:text=" 1.- Tendrás que estar acostado en el piso, con tu espalda recta y tus rodillas dobladas en un ángulo de 60°.\n 2.- Con tus manos cerca de tus sienes, o cruzadas sobre el pecho, levanta tus hombros del suelo un poco y siente cómo trabajan tus abdominales. \n 3.- Exhala y regresa al piso. Repítelo
"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/letra1"
                android:rotationX="0"
                android:text="Video de ayuda:"
                android:textAllCaps="false"
                android:textColor="#9A0505"
                android:textSize="20dp"
                android:textStyle="bold" />


            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/videoAbdominales"
                android:layout_width="337dp"
                android:layout_height="249dp"
                android:layout_gravity="center"
                app:autoPlay="true"
                app:videoId="1xYD4naMSr8" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>