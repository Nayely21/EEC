<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado2"
    tools:context=".Hombrepiernas">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="#1ACF1D"
                android:fontFamily="@font/pacifico"
                android:textColor="#000000"
                android:gravity="center"
                android:text="PIERNAS"
                android:textSize="40dp" />

            <ImageButton
                android:id="@+id/abdominalmu"
                android:layout_width="255dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#8452AE"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/piernashombre" />
            <TextView
                android:id="@+id/concepto"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/letra1"
                android:rotationX="0"
                android:text="CONCEPTO:"
                android:textAllCaps="false"
                android:textColor="#FF7A22"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desripcion"
                android:layout_width="349dp"
                android:layout_height="217dp"
                android:layout_gravity="center"
                android:textColor="#B30909"
                android:fontFamily="@font/calligraffitti"
                android:gravity="center"
                android:rotationX="0"
                android:text=" Para sacar músculos en las piernas, evidentemente hace falta ejercitarse. Y aunque muchas personas no le den prioridad a las extremidades inferiores, al igual que los glúteos, el abdomen y los brazos, las piernas merecen tanta o incluso más atención que otras zonas."
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="19dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/accion"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/letra1"
                android:rotationX="0"
                android:text="Que ejercicios realizar:"
                android:textAllCaps="false"
                android:textColor="#FF5304"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desripcion2"
                android:layout_width="310dp"
                android:layout_height="172dp"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:rotationX="0"
                android:text="* Sentadillas.\n* Zancadas alternas. \n* Burpees \n* Puente \n* Gemelos."
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#07209A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/letra1"
                android:rotationX="0"
                android:text="Video de ayuda:"
                android:textAllCaps="false"
                android:textColor="#9A0505"
                android:textSize="20dp"
                android:textStyle="bold" />


            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/videoAbdominales"
                android:layout_width="337dp"
                android:layout_height="169dp"
                android:layout_gravity="center"
                app:autoPlay="true"
                app:videoId="sE1wEkm-zzc" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>